@page "/movie-pricing/{MovieId:int}"
@using BlazorWebAppAdmin.Services
@inject IMoviePricingService MoviePricingService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthService AuthService

<h3>Movie Pricings</h3>

<button class="btn btn-success mb-3" @onclick="CreateNew">Add Pricing</button>

@if (isLoading)
{
    <p>Loading...</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Type</th>
                <th>Price</th>
                <th>Rental Days</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in pricings)
            {
                <tr>
                    <td>@item.PricingType</td>
                    <td>@item.Price</td>
                    <td>@item.RentalDurationDays</td>
                    <td>@item.StartDate?.ToString("yyyy-MM-dd")</td>
                    <td>@item.EndDate?.ToString("yyyy-MM-dd")</td>
                    <td>@item.IsActive</td>
                    <td>
                        <button class="btn btn-sm btn-primary me-1" @onclick="() => Edit(item.Id)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(item.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (showForm)
{
    <div class="card p-4 shadow-sm mb-3">
        <h4>@(editingItem != null ? "Update Pricing" : "Create Pricing")</h4>

        <!-- Pricing Type -->
        <div class="mb-3">
            <label>Pricing Type</label>
            <select class="form-select" @bind="formModel.PricingType">
                <option value="@PricingType.BUY">Buy</option>
                <option value="@PricingType.RENT">Rent</option>
                <option value="@PricingType.FREE">Free</option>
            </select>
        </div>

        <!-- Price -->
        <div class="mb-3">
            <label>Price</label>
            <input type="number" class="form-control"
                   @bind="formModel.Price" min="0" step="1000"
                   disabled="@IsFreePrice" />
        </div>

        <!-- Rental Duration -->
        @if (formModel.PricingType == PricingType.RENT)
        {
            <div class="mb-3">
                <label>Rental Duration (days)</label>
                <input type="number" class="form-control"
                       @bind="formModel.RentalDurationDays" min="1" />
            </div>
        }

        <!-- Start Date -->
        <div class="mb-3">
            <label>Start Date</label>
            <input type="date" class="form-control"
                   @bind="formModel.StartDate" />
        </div>

        <!-- End Date -->
        <div class="mb-3">
            <label>End Date (optional)</label>
            <input type="date" class="form-control"
                   @bind="formModel.EndDate" />
        </div>

        <!-- Active -->
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input"
                   id="isActive" @bind="formModel.IsActive" />
            <label class="form-check-label" for="isActive">Is Active</label>
        </div>

        <!-- Buttons -->
        <div class="d-flex gap-2">
            <button class="btn btn-primary" @onclick="Save">Save</button>
            <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
        </div>
    </div>
}

@code {
    [Parameter] public int MovieId { get; set; }

    private List<CreateUpdateMoviePricingViewModel> pricings = new();
    private bool isLoading = true;

    private bool showForm = false;
    private CreateUpdateMoviePricingViewModel formModel = new();
    private CreateUpdateMoviePricingViewModel editingItem = null;

    private bool IsFreePrice => formModel.PricingType == PricingType.FREE;

    protected override async Task OnInitializedAsync()
    {
        if (!await AuthService.IsAuthenticated())
        {
            Navigation.NavigateTo("/login", true);
        }

        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        pricings = (await MoviePricingService.GetByMovieAsync(MovieId)).ToList();
        isLoading = false;
    }

    private void CreateNew()
    {
        formModel = new CreateUpdateMoviePricingViewModel
        {
            MovieId = MovieId,
            PricingType = PricingType.BUY,
            IsActive = true,
            StartDate = DateTime.UtcNow
        };
        editingItem = null;
        showForm = true;
    }

    private async Task Edit(int id)
    {
        editingItem = await MoviePricingService.GetByIdAsync(id);
        formModel = new CreateUpdateMoviePricingViewModel
        {
            Id = editingItem.Id,
            MovieId = editingItem.MovieId,
            PricingType = editingItem.PricingType,
            Price = editingItem.Price,
            RentalDurationDays = editingItem.RentalDurationDays,
            StartDate = editingItem.StartDate,
            EndDate = editingItem.EndDate,
            IsActive = editingItem.IsActive
        };
        showForm = true;
    }

    private async Task Delete(int id)
    {
        if (await MoviePricingService.DeleteAsync(id))
        {
            await LoadData();
        }
    }

    private async Task Save()
    {
        if (editingItem == null)
            await MoviePricingService.CreateAsync(formModel);
        else
            await MoviePricingService.UpdateAsync(formModel.Id, formModel);

        showForm = false;
        await LoadData();
    }

    private void Cancel()
    {
        showForm = false;
    }
}
