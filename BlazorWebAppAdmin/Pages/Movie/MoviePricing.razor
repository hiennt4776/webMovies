@code {
    [Parameter] public int? Id { get; set; }       // nếu có → edit, null → create
    [Parameter] public int MovieId { get; set; }  // bắt buộc cho create

    private CreateUpdateMoviePricingViewModel formModel = new();
    private bool IsEdit => Id.HasValue;

    protected override async Task OnInitializedAsync()
    {
        if (IsEdit)
        {
            // Load dữ liệu để edit
            var data = await MoviePricingService.GetByIdAsync(Id.Value);
            formModel = new CreateUpdateMoviePricingViewModel
            {
                Id = data.Id,
                MovieId = data.MovieId,
                PricingType = data.PricingType,
                Price = data.Price,
                RentalDurationDays = data.RentalDurationDays,
                StartDate = data.StartDate,
                EndDate = data.EndDate,
                IsActive = data.IsActive
            };
        }
        else
        {
            // Create mới
            formModel = new CreateUpdateMoviePricingViewModel
            {
                MovieId = MovieId,
                PricingType = "Buy",
                IsActive = true,
                StartDate = DateTime.UtcNow
            };
        }
    }

    private async Task HandleSave()
    {
        if (IsEdit)
        {
            await MoviePricingService.UpdateAsync(formModel.Id, formModel);
        }
        else
        {
            await MoviePricingService.CreateAsync(formModel);
        }

        // Quay lại trang quản lý phim (hoặc trang list nếu có)
        Nav.NavigateTo($"/movies/{formModel.MovieId}/pricings");
    }

    private void Cancel()
    {
        Nav.NavigateTo($"/movies/{formModel.MovieId}/pricings");
    }
}
