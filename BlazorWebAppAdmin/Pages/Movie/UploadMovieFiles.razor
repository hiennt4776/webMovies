@page "/upload-movie-file/{CurrentMovieId:int}"
@using BlazorWebAppAdmin.Services
@inject IMovieFileService MovieFileService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@inject AuthService AuthService

<h3>Cấu hình file cho phim</h3>

@if (CurrentMovieId == 0)
{
    <p class="text-danger"><b>Hãy chọn phim từ danh sách.</b></p>
}
else
{
    <div class="card p-3">

        <h5>Phim ID: @CurrentMovieId</h5>

        <div class="mb-3">
            <label class="form-label">Loại file</label>
            <select class="form-select" @bind="SelectedType">
                <option value="@FileTypeMovieConstant.POSTER">Poster</option>
                <option value="@FileTypeMovieConstant.TRAILER">Trailer</option>
                <option value="@FileTypeMovieConstant.MOVIES">Movie</option>
                <option value="@FileTypeMovieConstant.SUBTITLE">Subtitle</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Select File</label>
            <InputFile OnChange="SelectFile" />
            @if (SelectedFile != null)
            {
                <p class="mt-2"><b>Đã chọn:</b> @SelectedFile.Name</p>
            }
        </div>

        <button class="btn btn-primary" @onclick="SaveFile" disabled="@(!CanSave)">
            Lưu
        </button>

        @if (IsSaving)
        {
            <p class="text-info mt-2"><em>Đang xử lý...</em></p>
        }

        @if (!string.IsNullOrEmpty(Message))
        {
            <div class="alert alert-info mt-2">@Message</div>
        }
    </div>
}


<!-- ===== File List Section ===== -->
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <span>Configured Files</span>
        <button class="btn btn-sm btn-outline-secondary" @onclick="LoadFiles">
            Refresh
        </button>
    </div>

    <div class="card-body p-0">
        @if (files.Count == 0)
        {
            <div class="p-3 text-muted">
                No files configured for this movie.
            </div>
        }
        else
        {
            <table class="table table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>File Name</th>
                        <th>Type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in files)
                    {
                        <tr>
                            <td>@file.Id</td>
                            <td>@file.FileName</td>
                            <td>
                                <span class="badge bg-info text-dark">
                                    @file.FileType
                                </span>
                            </td>
                        
                            <td>
                                <a class="btn btn-sm btn-outline-primary"
                                   href="@file.FilePath"
                                   target="_blank">
                                    View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>


@code {
    // Movie ID nhận từ danh sách phim
    [Parameter] public int CurrentMovieId { get; set; } = 0;

    private string SelectedType { get; set; } = FileTypeMovieConstant.POSTER;

    private IBrowserFile? SelectedFile;
    private bool IsSaving = false;
    private string? Message;
    List<MovieFileViewModel> files = new();


    private bool CanSave => CurrentMovieId > 0 && SelectedFile != null;

    protected override async Task OnInitializedAsync()
    {
        if (!await AuthService.IsAuthenticated())
        {
            Navigation.NavigateTo("/login", true);
        }
        LoadFiles();
    }

    private void SelectFile(InputFileChangeEventArgs e)
    {
        SelectedFile = e.File;
        Message = null;
    }

    private async Task SaveFile()
    {
        if (!CanSave)
        {
            Message = "Vui lòng chọn file.";
            return;
        }

        try
        {
            IsSaving = true;
            Message = null;

            await MovieFileService.UploadAsync(
                CurrentMovieId,
                SelectedFile!,
                SelectedType
            );

            Message = $"Lưu file thành công cho phim ID {CurrentMovieId}.";
        }
        catch (Exception ex)
        {
            Message = $"Lỗi lưu file: {ex.Message}";
        }
        finally
        {
            IsSaving = false;
        }
    }

    private async Task LoadFiles()
    {
        files = await MovieFileService.GetFilesAsync(CurrentMovieId);
    }
}
