@page "/categories"
@using BlazorWebAppAdmin.Services
@inject ICategoryService CategoryService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@inject AuthService AuthService
<DashboardHeader Title="Dashboard"
                 BreadcrumbMain="Category"
                 BreadcrumbCurrent="Index" />

<div class="container-fluid">
    <!--begin::Row-->
    <div class="row g-4">
        <div class="col-md-12">

            <div class="card card-danger card-outline mb-4">
                <!--begin::Header-->
                <div class="card-header d-flex align-items-center">
                    <div class="card-title mb-0 flex-grow-1">Category</div>
                    <div class="ms-auto">
                        <button class="btn btn-success" @onclick="AddNew">
                            <i class="fas fa-plus me-1"></i> Add Category
                        </button>
                    </div>
                </div>

                <!--end::Header-->
                <!--begin::Body-->
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-8 col-sm-12 mb-2">
                            <input type="text" class="form-control" placeholder="Search..." @bind="searchText" />
                        </div>
                        <div class="col-md-4 col-sm-12 d-flex gap-2">
                            <button class="btn btn-primary flex-fill" @onclick="SearchAsync">
                                <i class="fas fa-search me-1"></i> Search
                            </button>
                            <button class="btn btn-secondary flex-fill" @onclick="ClearSearch">
                                <i class="fas fa-undo me-1"></i> Clear
                            </button>
                        </div>
                    </div>

                    @if (pagedResult == null)
                    {
                        <div class="text-center py-3">
                            <div class="spinner-border text-primary" role="status"></div>
                            <p class="mt-2"><em>Loading data...</em></p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered align-middle text-center">
                                <thead class="table-light">
                                    <tr>
                                        <th style="cursor:pointer" @onclick="@(() => SortBy("CategoryName"))">
                                            Category Name
                                            @if (sortField == "CategoryName")
                                            {
                                                <i class="@(ascending ? "fas fa-sort-up" : "fas fa-sort-down") ms-1"></i>
                                            }
                                        </th>
                                        <th>Description</th>
                                        <th>Color</th>
                                        <th style="width:160px;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (!pagedResult.Items.Any())
                                    {
                                        <tr>
                                            <td colspan="4"><em>No data found.</em></td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var item in pagedResult.Items)
                                        {
                                            <tr>
                                                <td>@item.CategoryName</td>
                                                <td>@item.Description</td>
                                                <td>
                                                    <div style="width:80px; height:25px; border-radius:5px; background-color:@item.Color; border:1px solid #ccc; margin:auto;"></div>
                                                    <small>@item.Color</small>
                                                </td>
                                                <td>
                                                    <div class="btn-group">
                                                        <button class="btn btn-sm btn-info" title="Detail" @onclick="() => GoToDetail(item.Id)">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-warning" title="Edit" @onclick="() => Edit(item.Id)">
                                                            <i class="bi bi-pencil-square"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-danger" title="Delete" @onclick="() => ShowConfirm(item.Id, item.CategoryName)">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination & Add Button -->
                        <div class="d-flex justify-content-between align-items-center mt-3 flex-wrap gap-2">
                            <div class="d-flex gap-2">
                                <button class="btn btn-outline-primary btn-sm" @onclick="PreviousPage" disabled="@(!CanPrevious)">
                                    <i class="fas fa-arrow-left me-1"></i> Prev
                                </button>
                                <button class="btn btn-outline-primary btn-sm" @onclick="NextPage" disabled="@(!CanNext)">
                                    Next <i class="fas fa-arrow-right ms-1"></i>
                                </button>
                            </div>

                            <div class="text-muted">
                                Page <b>@pagedResult.PageNumber</b> / @TotalPages | Total: <b>@pagedResult.TotalCount</b>
                            </div>

                         
                        </div>
                    }
                </div>
                <!--end::Body-->
            </div>
        </div>
    </div>
    <!--end::Row-->
</div>

<!-- Confirm Delete Modal -->
@if (showConfirm)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color:rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-danger">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-1"></i> Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CloseConfirm"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete category <b>@confirmName</b>?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseConfirm">Cancel</button>
                    <button class="btn btn-danger" @onclick="ConfirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private PagedResult<CategoryViewModel>? pagedResult;
    private int pageNumber = 1;
    private int pageSize = 10;
    private string? searchText;
    private string sortField = "CreateDate";
    private bool ascending = false;

    private bool showConfirm;
    private int deleteId;
    private string? confirmName;
    private int TotalPages => (int)Math.Ceiling((double)(pagedResult?.TotalCount ?? 0) / pageSize);
    private bool CanPrevious => pageNumber > 1;
    private bool CanNext => pagedResult != null && pageNumber < TotalPages;

    protected override async Task OnInitializedAsync()
    {
        if (!await AuthService.IsAuthenticated())
        {
            Navigation.NavigateTo("/login", true);
        }
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        pagedResult = await CategoryService.GetPagedSearchSortAsync(pageNumber, pageSize, searchText, sortField, ascending);
    }

    private async Task SearchAsync()
    {
        pageNumber = 1;
        await LoadDataAsync();
    }

    private async Task ClearSearch()
    {
        searchText = string.Empty;
        pageNumber = 1;
        await LoadDataAsync();
    }

    private async Task SortBy(string field)
    {
        if (sortField == field)
            ascending = !ascending;
        else
            sortField = field;
        await LoadDataAsync();
    }

    private async Task NextPage()
    {
        if (CanNext)
        {
            pageNumber++;
            await LoadDataAsync();
        }
    }

    private async Task PreviousPage()
    {
        if (CanPrevious)
        {
            pageNumber--;
            await LoadDataAsync();
        }
    }

    private void AddNew()
    {
        Navigation.NavigateTo("/categories/add");
    }

    private void Edit(int id)
    {
        Navigation.NavigateTo($"/categories/edit/{id}");
    }

    private void GoToDetail(int id)
    {
        Navigation.NavigateTo($"/categories/detail/{id}");
    }

    private void ShowConfirm(int id, string name)
    {
        deleteId = id;
        confirmName = name;
        showConfirm = true;
    }

    private void CloseConfirm()
    {
        showConfirm = false;
        confirmName = null;
    }

    private async Task ConfirmDelete()
    {
        showConfirm = false;
        var result = await CategoryService.DeleteAsync(deleteId);
        if (result)
        {
            await LoadDataAsync();
            await JSRuntime.InvokeVoidAsync("alert", "Delete success!");
        }
        else
        {
            await JSRuntime.InvokeVoidAsync("alert", "Delete fail!");
        }
    }
}
