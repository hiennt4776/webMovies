@page "/categories/detail/{Id:int}"
@using BlazorWebAppAdmin.Services
@inject NavigationManager Navigation
@inject ICategoryService CategoryService
@inject AuthService AuthService
<DashboardHeader Title="Dashboard"
                 BreadcrumbMain="Category"
                 BreadcrumbCurrent="Detail" />

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-gradient-info text-white d-flex justify-content-between align-items-center rounded-top-4">
                    <h5 class="mb-0">
                        <i class="fas fa-folder-open me-2"></i> Category Detail
                    </h5>
                  
                </div>

                <div class="card-body p-4">
                    @if (category == null)
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-3 text-muted">Loading category data...</p>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="@category">
                            <div class="row g-3">
                                <!-- Category Name -->
                                <div class="col-md-8">
                                    <label class="form-label fw-semibold">
                                        <i class="fas fa-tag me-1 text-secondary"></i> Category Name
                                    </label>
                                    <InputText class="form-control form-control-lg" @bind-Value="category.CategoryName" readonly />
                                </div>

                                <!-- Color -->
                                <div class="col-md-4">
                                    <label class="form-label fw-semibold">
                                        <i class="fas fa-palette me-1 text-secondary"></i> Color
                                    </label>
                                    <div class="d-flex align-items-center">
                                        <InputText type="color" class="form-control form-control-color me-2"
                                               @bind-Value="category.Color" disabled 
                                               style="width: 3rem; height: 3rem;" />
                                        <span class="badge border border-secondary px-3 py-2" 
                                              style="background-color:@category.Color;">@category.Color</span>
                                    </div>
                                </div>

                                <!-- Description -->
                                <div class="col-12">
                                    <label class="form-label fw-semibold">
                                        <i class="fas fa-align-left me-1 text-secondary"></i> Description
                                    </label>
                                    <InputTextArea class="form-control" rows="4" 
                                                   @bind-Value="category.Description" readonly />
                                </div>
                            </div>

                            <div class="d-flex justify-content-end mt-4">
                                <button class="btn btn-secondary btn-lg px-4" type="button" @onclick="GoBack">
                                    <i class="fas fa-arrow-left me-2"></i> Back
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }
    private CategoryViewModel? category;

    protected override async Task OnInitializedAsync()
    {
        if (!await AuthService.IsAuthenticated())
        {
            Navigation.NavigateTo("/login", true);
        }

        category = await CategoryService.GetByIdAsync(Id);
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/categories");
    }
}
