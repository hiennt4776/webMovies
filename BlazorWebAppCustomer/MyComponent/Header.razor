            @if (string.IsNullOrEmpty(FullName))
            {
                <!-- Chưa đăng nhập -->
                <div class="d-flex">
                    <button class="btn btn-success rounded-pill me-2" @onclick="GoToRegister">Register</button>
                    <button class="btn btn-danger rounded-pill" @onclick="GoToLogin">Login</button>
                </div>
            }
            else
            {
                <!-- Đã đăng nhập -->
                <div class="d-flex align-items-center">
                    <span class="text-white me-3 fw-semibold">@FullName</span>
                    <button class="btn btn-outline-light rounded-pill" @onclick="Logout">Logout</button>
                </div>
            }
        </div>
    </div>
</nav>

@code {
    [Inject] NavigationManager NavManager { get; set; }
    [Inject] ILocalStorageService LocalStorage { get; set; }

    private string? FullName;

    protected override async Task OnInitializedAsync()
    {
        // Lấy fullname từ localStorage (nếu có)
        FullName = await LocalStorage.GetItemAsync<string>("fullName");

        // Nếu null => đặt về rỗng để tránh lỗi null reference
        FullName ??= string.Empty;
    }

    private void GoToRegister()
    {
        NavManager.NavigateTo("/register");
    }

    private void GoToLogin()
    {
        NavManager.NavigateTo("/login");
    }

    private async Task Logout()
    {
        // Xóa thông tin trong LocalStorage
        await LocalStorage.RemoveItemAsync("token");
        await LocalStorage.RemoveItemAsync("fullName");
        await LocalStorage.RemoveItemAsync("email");

        FullName = string.Empty;

        // Điều hướng về login
        NavManager.NavigateTo("/login", forceLoad: true);
    }
}
